<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/feedsListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Корм"
        android:textColor="@color/brown_text"
        android:textSize="15pt"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feedsListText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="На складе(кг):"
            android:textColor="@color/brown_text"
            android:textSize="12pt" />
        <TextView
            android:id="@+id/feedsListQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/brown_text"
            android:textSize="12pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" android:layout_marginTop="5dp">

        <Button
            android:id="@+id/AddQuantityFeed"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/brown_text"
            android:text="Внести"
            android:textColor="@color/light_light_brown_element"
            android:textSize="10pt" />

        <Button
            android:id="@+id/downQuantityFeed"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/exit_red"
            android:text="Вычесть"
            android:textColor="@color/light_light_brown_element"
            android:textSize="10pt" />
    </LinearLayout>

</LinearLayout>