<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown_fon"
    tools:context=".EditOwnerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Редактирование владельца"
                android:textColor="@color/brown_text"
                android:textSize="20pt" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Фамилия:"
                android:textColor="#908B8A"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/editSurnameOwner"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Фамилия"
                android:inputType="text"
                android:textColor="@color/brown_text"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Имя:"
                android:textColor="#908B8A"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/editNameOwner"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Имя"
                android:inputType="text"
                android:textColor="@color/brown_text"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Отчество:"
                android:textColor="#908B8A"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/editPatronymicOwner"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Отчество"
                android:inputType="text"
                android:textColor="@color/brown_text"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Почта:"
                android:textColor="#908B8A"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/editEmailOwner"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Почта"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/brown_text"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Логин:"
                android:textColor="#908B8A"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/editLoginOwner"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:ems="10"
                android:hint="Логин"
                android:inputType="text"
                android:textColor="@color/brown_text"
                android:textSize="12pt" />

            <Button
                android:id="@+id/deleteOwnerButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="60dp"
                android:backgroundTint="@color/exit_red"
                android:text="Удалить"
                android:textColor="@color/light_brown_fon"
                android:textSize="10pt" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/SaveOwnerButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/brown_text"
        android:text="Сохранить"
        android:textColor="@color/light_brown_fon"
        android:textSize="10pt"
        android:visibility="gone"/>

    <Button
        android:id="@+id/EditOwnerButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/brown_text"
        android:text="Изменить"
        android:textColor="@color/light_brown_fon"
        android:textSize="10pt" />

    <ImageView
        android:id="@+id/topFlower"
        android:layout_width="489dp"
        android:layout_height="80dp"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="-30dp"
        app:srcCompat="@drawable/flowers_top" />

    <ImageView
        android:id="@+id/buttomFlower"
        app:srcCompat="@drawable/flowers_buttom"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-45dp"
        android:layout_marginBottom="-70dp" />

</FrameLayout>