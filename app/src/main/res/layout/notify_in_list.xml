<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/notifyListDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Очень длинное описание, которое содержится в уведомлении"
        android:textColor="@color/brown_text"
        android:textSize="10pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notifyListDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="11.02.2005"
        android:textColor="@color/brown_text"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/NotifyListSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="От: Назарычева В. Д."
        android:textColor="@color/brown_text"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/NotifyListRecipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Кому: Назарычева В. Д."
        android:textColor="@color/brown_text"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/NotifyListRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прочитано"
        android:textColor="@color/brown_text"
        android:textSize="8pt"
        android:textStyle="bold" />


</LinearLayout>