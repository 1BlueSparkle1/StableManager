<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown_fon"
    tools:context=".Pages.AdminPages.Fragments.EditVeterinarianAdminFragment">

    <ImageView
        android:id="@+id/topFlower"
        android:layout_width="489dp"
        android:layout_height="80dp"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="-30dp"
        app:srcCompat="@drawable/flowers_top" />

    <ImageView
        android:id="@+id/buttomFlower"
        app:srcCompat="@drawable/flowers_buttom"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-45dp"
        android:layout_marginBottom="-70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Редактирование ветеринара"
            android:textColor="@color/brown_text"
            android:textSize="20pt" />

        <EditText
            android:id="@+id/EditFioVeterinarian"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="ФИО"
            android:inputType="text"
            android:textColor="@color/brown_text"
            android:textSize="12pt" />

        <EditText
            android:id="@+id/phoneVeterinarianAdmin"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Телефон"
            android:inputType="phone"
            android:textColor="@color/brown_text"
            android:textSize="12pt" />

        <EditText
            android:id="@+id/addStableIdVeterinarian"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Конюшня"
            android:inputType="text"
            android:textColor="@color/brown_text"
            android:textSize="12pt" />

        <Button
            android:id="@+id/addStableVeterinarianButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/light_brown_text"
            android:enabled="false"
            android:text="Выбрать конюшню"
            android:textColor="@color/light_brown_fon"
            android:textSize="10pt" />

        <Button
            android:id="@+id/SaveVeterinarianButtonPage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/brown_text"
            android:text="Сохранить"
            android:textColor="@color/light_brown_fon"
            android:textSize="10pt"
            android:visibility="gone"/>

        <Button
            android:id="@+id/EditVeterinarianButtonPage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/brown_text"
            android:text="Изменить"
            android:textColor="@color/light_brown_fon"
            android:textSize="10pt" />

        <Button
            android:id="@+id/deleteVeterinarianButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/exit_red"
            android:text="Удалить"
            android:textColor="@color/light_brown_fon"
            android:textSize="10pt" />
    </LinearLayout>

</FrameLayout>